{{ ansible_managed | comment }}


[Unit]
Description=promtail
After=network-online.target

[Service]
Restart=always
RestartSec=5
TimeoutSec=5
User={{ loki_system_user }}
Group={{ loki_system_group }}
ExecStart=/usr/local/bin/promtail -config.file={{ loki_config_dir }}/promtail-config.yml -log.level={{ promtail_log_level }}

[Install]
WantedBy=multi-user.target