{{ ansible_managed | comment }}


[Unit]
Description=loki
After=network-online.target

[Service]
Restart=always
RestartSec=5
TimeoutSec=5
User={{ loki_system_user }}
Group={{ loki_system_group }}
ExecStart=/usr/local/bin/loki -config.file={{ loki_config_dir }}/loki-config.yml -log.level={{ loki_log_level }}

[Install]
WantedBy=multi-user.target